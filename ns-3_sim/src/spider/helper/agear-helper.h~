#ifndef AGEARHELPER_H_
#define AGEARHELPER_H_

#include "ns3/object-factory.h"
#include "ns3/node.h"
#include "ns3/node-container.h"
#include "ns3/ipv4-routing-helper.h"

namespace ns3 {
/**
 * \ingroup agear
 * \brief Helper class that adds agear routing to nodes.
 */
class AgearHelper : public Ipv4RoutingHelper
{
public:
  AgearHelper ();

  /**
   * \internal
   * \returns pointer to clone of this OlsrHelper
   *
   * This method is mainly for internal use by the other helpers;
   * clients are expected to free the dynamic memory allocated by this method
   */
  AgearHelper* Copy (void) const;

  /**
   * \param node the node on which the routing protocol will run
   * \returns a newly-created routing protocol
   *
   * This method will be called by ns3::InternetStackHelper::Install
   *
   * TODO: support installing agear on the subset of all available IP interfaces
   */
  virtual Ptr<Ipv4RoutingProtocol> Create (Ptr<Node> node, EnergySourceContainer sources) const;
  /**
   * \param name the name of the attribute to set
   * \param value the value of the attribute to set.
   *
   * This method controls the attributes of ns3::agear::RoutingProtocol
   */
  void Set (std::string name, const AttributeValue &value);

  void Install (void) const;

private:
  ObjectFactory m_agentFactory;
};

}
#endif /* AGEARHELPER_H_ */
