#include "agear-helper.h"
#include "ns3/agear.h"
#include "ns3/node-list.h"
#include "ns3/names.h"
#include "ns3/ipv4-list-routing.h"
#include "ns3/node-container.h"
#include "ns3/callback.h"
#include "ns3/udp-l4-protocol.h"
#include "ns3/tcp-l4-protocol.h"

namespace ns3 {

AgearHelper::AgearHelper ()
  : Ipv4RoutingHelper ()
{
  m_agentFactory.SetTypeId ("ns3::agear::RoutingProtocol");
}

AgearHelper*
AgearHelper::Copy (void) const
{
  return new AgearHelper (*this);
}

Ptr<Ipv4RoutingProtocol>
AgearHelper::Create (Ptr<Node> node) const
{
  //Ptr<Ipv4L4Protocol> ipv4l4 = node->GetObject<Ipv4L4Protocol> ();
  Ptr<agear::RoutingProtocol> agear = m_agentFactory.Create<agear::RoutingProtocol> ();
  //agear->SetDownTarget (ipv4l4->GetDownTarget ());
  //ipv4l4->SetDownTarget (MakeCallback (&agear::RoutingProtocol::AddHeaders, agear));
  node->AggregateObject (agear);
  Ptr<SimpleDeviceEnergyModel> sem = CreateObject<SimpleDeviceEnergyModel> ();
  Ptr<EnergySourceContainer> esCont = CreateObject<EnergySourceContainer> ();
  Ptr<LiIonEnergySource> es = CreateObject<LiIonEnergySource> ();
  esCont->Add (es);
  es->SetNode (node);
  sem->SetEnergySource (es);
  es->AppendDeviceEnergyModel (sem);
  sem->SetNode (node);
  node->AggregateObject (esCont);
  return agear;
}

void
AgearHelper::Set (std::string name, const AttributeValue &value)
{
  m_agentFactory.Set (name, value);
}


void 
AgearHelper::Install (void) const
{
  NodeContainer c = NodeContainer::GetGlobal ();
  for (NodeContainer::Iterator i = c.Begin (); i != c.End (); ++i)
    {
      Ptr<Node> node = (*i);
      Ptr<UdpL4Protocol> udp = node->GetObject<UdpL4Protocol> ();
      Ptr<TcpL4Protocol> tcp = node->GetObject<TcpL4Protocol> ();
      Ptr<agear::RoutingProtocol> agear = node->GetObject<agear::RoutingProtocol> ();
      //Ptr<LocationService> lS = CreateObject<GodLocationService>();
      //agear->SetLS(lS);
      agear->SetUdpDownTarget (udp->GetDownTarget ());
      udp->SetDownTarget (MakeCallback(&agear::RoutingProtocol::AddHeaders, agear));
      agear->SetTcpDownTarget (tcp->GetDownTarget ());
      tcp->SetDownTarget (MakeCallback(&agear::RoutingProtocol::AddHeaders, agear));
    }


}


}
